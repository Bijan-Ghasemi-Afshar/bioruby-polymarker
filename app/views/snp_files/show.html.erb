<h2><%= @snp_file.filename%></h2>

<div>
Status: <%= @snp_file.status %> <br/>
Reference: <%= @snp_file.reference %> <br/>
</div>

<div>
<h3>Markers file</h3>
<div>

<div id="input_grid"  style="width: 900px; height: 500px"></div>

</div>
<h4>Ignored lines</h4>
<div>
 <% @snp_file.not_parsed.each do |line| %>
 	<%= line %> </br>
 <% end %>
</div>
</div>

<script type="text/javascript">
        $(document).ready(function () {
						var grid_div = $("#input_grid");
						console.log(grid_div);
            $("#input_grid").w2grid({
							name: 'input_grid',
							method: 'GET',
							show: {
								toolbar: true,
								footer: true,
								toolbarReload: false
							},
							fixedBody : true,
							url: '<%= @snp_file.id  %>/input.json',
							columns: [
								{field: 'ID', caption:'ID', size: '240px'},
								{field: 'Chr', caption:'Chr', size: '50px'},
								{field: 'Sequence', caption:'Sequence', size: '600px'}
						]
						});
						//w2ui['grid'].load('./input.json');
					});

   </script>
